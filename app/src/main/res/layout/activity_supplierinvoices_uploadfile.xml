<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/theme_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".afterlogin.filingcabinet.supplierinvoices_uploadfile">

    <include
        android:id="@+id/supplierinvoices_toolbar"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supplierinvoices_toolbar"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="33dp"
        app:cardCornerRadius="14dp"
        android:background="@color/white">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/supplierinvoices_imagecard"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:elevation="6dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/imagetoshowinsupplierinvoices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_image" />

                <com.github.barteksc.pdfviewer.PDFView
                    android:id="@+id/pdfView_SupplierFileUpload"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/heading_supplierinvoicesfile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/supplierinvoices_imagecard"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/themebtnv2_bg"
                android:hint="File Name"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/supplierinvoices_filecard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/supplierinvoices_imagecard"
                android:background="@drawable/theme_bg"
                app:cardBackgroundColor="@color/themecolor1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:fontFamily="@font/montregular"
                    android:gravity="center"
                    android:text="Upload File"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/supplierinvoicesuploadbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading_supplierinvoicesfile"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/themebtn_bg"
                android:fontFamily="@font/montregular"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>