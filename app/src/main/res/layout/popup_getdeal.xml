<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="16dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/get_dealpopupexit"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_cross" />

    <TextView
        android:id="@+id/deal_Accepteddealshead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Accepted Deals"
        android:textAlignment="center"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/deal_acceptedtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deal_Accepteddealshead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="No Accepted Deals"
        android:textAlignment="center"
        android:textColor="#696969"

        />
    <TextView
        android:id="@+id/deal_Accepteddescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/deal_acceptedtitle"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAlignment="center"

        />
    <TextView
        android:id="@+id/deal_alldealshead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/deal_Accepteddescription"
        android:layout_marginTop="20dp"
        android:text="All Deals"
        android:textAlignment="center"
        android:textColor="@color/black"

        />
    <RelativeLayout
        android:id="@+id/get_dealheads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/deal_alldealshead"
        >

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Title"
            android:textColor="#696969" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Description"
            android:textColor="#696969"

            />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text="Get Deal"
            android:textColor="#696969" />
    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/getdealrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/get_dealheads"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_NoData"
            android:text="No Deal is Available!"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/get_dealheads"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>

</androidx.cardview.widget.CardView>