<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboardfragments.ServicesFragment">

    <include
        android:id="@+id/supportcustomlayout"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMarketing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_below="@+id/supportcustomlayout"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/theme_bg">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_digital_marketing" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/imageView_marketing"
                android:layout_toEndOf="@+id/image"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montregular"
                    android:text="Marketing"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/montregular"
                    android:text="Connect with consumers with creativity born from a core understanding of your business."
                    android:textColor="@color/whiteLow"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_marketing"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAccounting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_below="@+id/cardViewMarketing"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/theme_bg">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/ic_accounting_service" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image2"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imageView_accounting"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accounting"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montregular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="The bespoke solution for the accounting needs of your business."
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/whiteLow"
                    android:fontFamily="@font/montregular"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView_accounting"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/services_marketingbtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/supportcustomlayout"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:background="@drawable/themebtnv2_bg"
        android:drawableLeft="@drawable/ic_services_bullhorn"
        android:drawablePadding="22dp"
        android:fontFamily="@font/montregular"
        android:paddingLeft="12dp"
        android:text="Marketing Services"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/themecolor1"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/services_accountingbtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/services_marketingbtn"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:background="@drawable/themebtnv2_bg"
        android:drawableLeft="@drawable/ic_services_accounting"
        android:drawablePadding="22dp"
        android:fontFamily="@font/montregular"
        android:paddingLeft="12dp"
        android:text="Accounting Services"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/themecolor1"
        android:textSize="18sp" />


</RelativeLayout>