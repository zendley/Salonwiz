<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_bg"
    tools:context=".ui.user.TermsAndConditions">
    <include
        android:id="@+id/termsandcond_toolbar"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/title_termsandcond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termsandcond_toolbar"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:text="Terms and Conditions"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/termsandcond_toolbar"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="7dp">

        <TextView
            android:id="@+id/termsandcond_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montregular"
            android:justificationMode="inter_word"
            android:textColor="@color/white"
            android:textSize="13sp"

            />
    </ScrollView>

</RelativeLayout>