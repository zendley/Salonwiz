    <RelativeLayout
        android:background="@drawable/themebtnv2_bg"
        android:layout_below="@+id/mpservicebasic_toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="83dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mpservice_basictextoffer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montregular"
            android:text="Account Creation"
            android:textColor="@color/themecolor1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mpservice_basictextoffer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mpservice_basictextoffer1"
