            android:fontFamily="@font/montregular"
            android:textColor="@color/themecolor1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mpservice_basictextoffer7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
