<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_bg"
    tools:context=".afterlogin.user.SocialMedia">

    <include
        android:id="@+id/soical_layout"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_socialMedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_addSocial"
        android:layout_below="@id/soical_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_addSocial"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/themebtnv2_bg"
        android:fontFamily="@font/montregular"
        android:text="New Social Media Link"
        android:textAllCaps="false"
        android:textColor="@color/themecolor1"
        android:textSize="14sp" />

</RelativeLayout>