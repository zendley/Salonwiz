<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/theme_bg"
    android:layout_height="match_parent"
    tools:context=".afterlogin.UI.notification">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        android:id="@+id/notifation_toolbar"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
     <RelativeLayout
         android:layout_below="@id/notifation_toolbar"
         android:background="@color/white"
         android:layout_width="match_parent"
         android:layout_height="fill_parent">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="No new notification"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:textSize="17sp"
             android:textColor="@color/themecolor1"
             />

     </RelativeLayout>

    </RelativeLayout>


</FrameLayout>